{
  "name": "dev-${localWorkspaceFolderBasename}_full",
  "dockerComposeFile": "./docker/docker-compose.full.yml",
  "service": "dev-full-ca",
  "workspaceFolder": "/workspaces/app",
  "shutdownAction": "stopCompose",
  "updateRemoteUserUID": false,
  "postCreateCommand": "pnpm config set store-dir ~/.pnpm-store",
  "remoteEnv": {
    "VSCODE_SERVER_DIR": "/vscode/vscode-server",
    "CODEX_HOME": "/home/vscode/.codex"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csdevkit",
        "ms-dotnettools.csharp",
        "nurlybekovnt.csharpextensions",
        "adrianwilczynski.user-secrets",
        "patcx.vscode-nuget-gallery",

        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",

        "formulahendry.auto-close-tag",
        "formulahendry.auto-rename-tag",
        "Angular.ng-template",
        "johnpapa.Angular2",
        "solnurkarim.html-to-css-autocompletion",
        
        "openai.chatgpt",
        "maptz.regionfolder",
        "github.vscode-pull-request-github",
        "PKief.material-icon-theme",
        "johnpapa.vscode-peacock",
        "Gruntfuggly.todo-tree"
      ]
    }
  }
}
